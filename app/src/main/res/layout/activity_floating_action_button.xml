<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FloatingActionButtonActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:src="@drawable/ic_adicionar_24"
        app:backgroundTint="#4E1AAF"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#7E4BD7"
        app:tint="#FAFAFA" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="fabCamera,fabAlerta"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:src="@drawable/ic_adicionar_foto_24"
        android:tint="#661515"
        app:backgroundTint="#666464"
        app:fabCustomSize="40dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fabBotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#DBD6D6" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:src="@drawable/ic_alerta_24"
        android:tint="#661515"
        app:backgroundTint="#666464"
        app:fabCustomSize="40dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fabCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#DBD6D6" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/floatingActionButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:text="SALVAR"
        android:textColor="#FFFCFC"
        app:backgroundTint="#000000"
        app:icon="@drawable/ic_salvar"
        app:iconPadding="20dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>